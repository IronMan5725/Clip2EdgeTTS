<Window x:Class="EdgeTTSTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeTTSTest"
        mc:Ignorable="d"
        Title="EdgeTTS Feature Test" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="EdgeTTS Feature Test" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

        <!-- Speech Settings Group -->
        <GroupBox Grid.Row="1" Header="Speech Settings" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Voice -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Voice:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="VoiceComboBox" Margin="0,5,10,5" SelectedIndex="0" />

                <!-- Volume -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Volume:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider Grid.Column="0" x:Name="VolumeSlider" Minimum="0" Maximum="100" Value="100"
                            VerticalAlignment="Center" Margin="0,5,5,5" ValueChanged="Slider_ValueChanged" />
                    <TextBlock Grid.Column="1" x:Name="VolumeValueText" Text="100" VerticalAlignment="Center"
                               MinWidth="30" />
                </Grid>

                <!-- Speed -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Speed:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider Grid.Column="0" x:Name="SpeedSlider" Minimum="0" Maximum="200" Value="100"
                            VerticalAlignment="Center" Margin="0,5,5,5" ValueChanged="Slider_ValueChanged" />
                    <TextBlock Grid.Column="1" x:Name="SpeedValueText" Text="100" VerticalAlignment="Center"
                               MinWidth="30" />
                </Grid>

                <!-- Pitch -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Pitch:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <Grid Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Slider Grid.Column="0" x:Name="PitchSlider" Minimum="0" Maximum="200" Value="100"
                            VerticalAlignment="Center" Margin="0,5,5,5" ValueChanged="Slider_ValueChanged" />
                    <TextBlock Grid.Column="1" x:Name="PitchValueText" Text="100" VerticalAlignment="Center"
                               MinWidth="30" />
                </Grid>

                <!-- Output Device -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Output Device:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="AudioDeviceComboBox"
                          Margin="0,5,0,5" SelectionChanged="AudioDeviceComboBox_SelectionChanged" />
            </Grid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="SpeakButton" Content="Speak Text" Width="100" Margin="5" Click="SpeakButton_Click" />
            <Button x:Name="StopButton" Content="Stop Speaking" Width="100" Margin="5" Click="StopButton_Click" />
            <Button x:Name="CacheButton" Content="Cache Audio" Width="100" Margin="5" Click="CacheButton_Click" />
            <Button x:Name="ResetButton" Content="Reset Settings" Width="100" Margin="5" Click="ResetButton_Click" />
        </StackPanel>

        <!-- Text Input -->
        <GroupBox Grid.Row="3" Header="Text to Speak" MinHeight="100" Margin="0,0,0,10">
            <TextBox x:Name="TextToSpeech" AcceptsReturn="True" TextWrapping="Wrap"
                     Margin="5" />
        </GroupBox>

        <!-- Auto-Speak Clipboard Checkbox -->
        <CheckBox Grid.Row="4" x:Name="AutoSpeakCheckBox"
                  Content="Auto-Speak Clipboard Text"
                  Checked="AutoSpeakCheckBox_CheckedChanged"
                  Unchecked="AutoSpeakCheckBox_CheckedChanged"
                  Margin="0,10,0,10"/>

        <!-- Log Label -->
        <TextBlock Grid.Row="5" Text="Log:" Margin="0,0,0,5" />

        <!-- Log Output -->
        <TextBox Grid.Row="6" x:Name="LogTextBox" IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" />
    </Grid>
</Window>
